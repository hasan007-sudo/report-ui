    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.9.2",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.3.0"
